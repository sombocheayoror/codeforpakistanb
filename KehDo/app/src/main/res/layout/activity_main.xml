<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kehdo.mmfd.com.kehdo.MainActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:inputType="textPersonName"
        android:id="@+id/etLabel"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="17dp"
        android:text="Representative"
        android:layout_below="@+id/spinnerrep"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:inputType="textPersonName"
        android:id="@+id/editText"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="17dp"
        android:textStyle="bold"
        android:layout_below="@+id/etLabel"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Save"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/submitbtn"
        android:layout_centerHorizontal="true"
        android:background="#00ADEF"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/editText"
 />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/textView2"
        android:spinnerMode="dialog"
        style="@android:style/Widget.Material.Spinner.Underlined"
        android:textSize="17dp"
        android:textColor="#000"
        android:id="@+id/spinnertype" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnertype"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:spinnerMode="dialog"
        style="@android:style/Widget.Material.Spinner.Underlined"
        android:textSize="17dp"

        android:textColor="#000"
        android:id="@+id/spinnerrep"
 />

    <TextView
        android:text="Select your constituency and click save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/spinnertype"
        android:textColor="#000"
        android:textSize="15dp"
        android:layout_marginTop="40dp"
        android:id="@+id/textView2" />

    <TextView
        android:text="@string/instructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textSize="15dp"
        android:textColor="#000"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView3" />

</RelativeLayout>
